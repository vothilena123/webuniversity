@model IEnumerable<WebAppUniversity.Data.User>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>List of User</h2>


<table class="table" style="text-align:center;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>PhoneNumber</th>
            <th>Address</th>
            <th>Image</th>
            <th></th>



        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>
                    @if (user.Image != null)
                    {
                        <img style="width: 100px;height: 100px;border-radius: 100%;" src="@Url.Content("~/uploads/" + user.Image)" alt="User Image" />
                    }
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger mt-3">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>